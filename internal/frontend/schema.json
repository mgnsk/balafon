{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "uint": {
      "type": "integer",
      "minimum": 0,
      "maximum": 127
    },
    "powerOf2": {
      "type": "integer",
      "enum": [1, 2, 4, 8, 16, 32, 64, 128]
    },
    "instrument": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "channel": {
          "$ref": "#/definitions/uint"
        },
        "assign": {
          "type": "object",
          "minProperties": 1,
          "additionalProperties": {
            "$ref": "#/definitions/uint"
          }
        }
      },
      "required": ["channel", "assign"]
    },
    "instrumentArray": {
      "type": "array",
      "minLength": 1,
      "items": {
        "$ref": "#/definitions/instrument"
      }
    },
    "paramTrack": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "channel": {
          "$ref": "#/definitions/uint"
        },
        "tempo": {
          "type": "integer",
          "minimum": 0
        },
        "program": {
          "$ref": "#/definitions/uint"
        },
        "control": {
          "$ref": "#/definitions/uint"
        },
        "parameter": {
          "$ref": "#/definitions/uint"
        },
        "command": {
          "type": "string",
          "enum": ["start", "stop"]
        }
      },
      "oneOf": [{ "required": ["channel"] }, { "required": ["tempo"] }],
      "dependencies": {
        "program": ["channel"],
        "control": ["parameter", "channel"],
        "parameter": ["control"]
      }
    },
    "voiceTrack": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "channel": {
          "$ref": "#/definitions/uint"
        },
        "voices": {
          "type": "array",
          "minLength": 1,
          "items": {
            "type": "string"
          }
        }
      },
      "required": ["channel"],
      "dependencies": {
        "voices": ["channel"]
      }
    },
    "bar": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "time": {
          "$ref": "#/definitions/powerOf2"
        },
        "sig": {
          "$ref": "#/definitions/powerOf2"
        },
        "params": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/paramTrack"
          }
        },
        "tracks": {
          "type": "array",
          "minLength": 1,
          "items": {
            "$ref": "#/definitions/voiceTrack"
          }
        }
      },
      "required": ["name"],
      "anyOf": [{ "required": ["params"] }, { "required": ["tracks"] }]
    },
    "barArray": {
      "type": "array",
      "minLength": 1,
      "items": {
        "$ref": "#/definitions/bar"
      }
    }
  },
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "instruments": {
      "$ref": "#/definitions/instrumentArray"
    },
    "bars": {
      "$ref": "#/definitions/barArray"
    },
    "play": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": ["instruments", "bars"],
  "interpret": true
}
